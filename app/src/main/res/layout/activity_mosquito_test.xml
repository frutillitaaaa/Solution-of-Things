<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuraci贸n MQTT"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Broker MQTT">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBroker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tcp://test.mosquitto.org:1883" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Cliente ID">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClientId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AndroidClient" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="T贸pico">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test/topic" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Mensaje">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola ESP32!" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conectar"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desconectar"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar Mensaje"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suscribirse"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnGirarMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Girar motor (3 segundos)"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/etHoraProgramada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora programada"
                android:focusable="false"
                android:clickable="false"
                android:inputType="time" />
            <Button
                android:id="@+id/btnProgramarHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora" />
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmarProgramacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar programaci贸n"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado de conexi贸n:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desconectado"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensajes recibidos:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </ScrollView>

        <!-- Bloque Desayuno -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desayuno"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/etHoraDesayuno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora desayuno"
                android:focusable="false"
                android:clickable="false"
                android:inputType="time" />
            <Button
                android:id="@+id/btnSeleccionarDesayuno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora" />
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmarDesayuno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar desayuno"
            android:layout_marginBottom="8dp" />

        <!-- Bloque Almuerzo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Almuerzo"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/etHoraAlmuerzo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora almuerzo"
                android:focusable="false"
                android:clickable="false"
                android:inputType="time" />
            <Button
                android:id="@+id/btnSeleccionarAlmuerzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora" />
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmarAlmuerzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar almuerzo"
            android:layout_marginBottom="8dp" />

        <!-- Bloque Merienda -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merienda"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/etHoraMerienda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora merienda"
                android:focusable="false"
                android:clickable="false"
                android:inputType="time" />
            <Button
                android:id="@+id/btnSeleccionarMerienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora" />
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmarMerienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar merienda"
            android:layout_marginBottom="8dp" />

        <!-- Bloque Cena -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cena"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/etHoraCena"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora cena"
                android:focusable="false"
                android:clickable="false"
                android:inputType="time" />
            <Button
                android:id="@+id/btnSeleccionarCena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora" />
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmarCena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar cena"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView> 